<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiOdev.VkiSayfasi"
             Title="VKİ Hesaplama">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Vücut Kitle Indeksi (VKİ)" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- Kilo seçimi için Slider. Değeri değiştikçe 'OnBmiSliderChanged' olayı tetiklenir. -->
            <Label x:Name="labelWeight" Text="Kilo (kg): 70" FontSize="16" />
            <Slider x:Name="sliderWeight"
                    Minimum="30"
                    Maximum="200"
                    Value="70"
                    ValueChanged="OnBmiSliderChanged" />

            <!-- Boy seçimi için Slider. Değeri değiştikçe 'OnBmiSliderChanged' olayı tetiklenir. -->
            <Label x:Name="labelHeight" Text="Boy (cm): 170" FontSize="16" />
            <Slider x:Name="sliderHeight"
                    Minimum="100"
                    Maximum="250"
                    Value="170"
                    ValueChanged="OnBmiSliderChanged" />

            <!-- Sonuç Alanı: VKİ değeri ve kategorisi bu etiketlere dinamik olarak yazılacak -->
            <Frame Padding="20" CornerRadius="10" BorderColor="LightGray" HasShadow="True">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="VKİ Değeriniz:" FontSize="18" />
                    <Label x:Name="labelBmiResult"
                           Text="24.22"
                           FontSize="40"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label x:Name="labelBmiCategory"
                           Text="Normal Kilolu"
                           FontSize="20"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>